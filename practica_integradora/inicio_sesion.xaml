<Window x:Class="practica_integradora.inicio_sesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica_integradora"
        mc:Ignorable="d"
        Title="inicio_sesion" Height="600" Width="600"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True" Cursor="">
    
    <Border CornerRadius="10"
        BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5EFEB" Offset="0"/>
                <GradientStop Color="#C8D9E6" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush >
                <GradientStop Color="#FFFF" Offset="0"/>
                <GradientStop Color="#A6BED1" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>




        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimizar"       
           Background="#A6BED1"
           BorderThickness="0"
           Content="-"
           Foreground="White"
           FontSize="20"
           FontWeight="Black"
           Cursor="Hand"
           Grid.Column="1" />

                <Button x:Name="btnCerrar"       
            Background="#A6BED1"
            BorderThickness="0"
            Content="x"
            Foreground="White"
            FontSize="14"
            FontWeight="Black"
            Cursor="Hand"
            Grid.Column="2" Height="30" VerticalAlignment="Top" />
            </Grid>


            <StackPanel  HorizontalAlignment="Center" Grid.Row="1">



                <TextBlock Text="INICIO DE SESION" FontSize="60" FontWeight="Bold" FontFamily="Pericles Light" Foreground="#2F4156" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                <TextBlock Text="Inicia sesion para administrar!" FontSize="25" Foreground="#577C8E" Margin="0,10,0,40" HorizontalAlignment="Center"/>


                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Nombre de usuario" FontSize="22" HorizontalAlignment="Center"/>
                    <TextBox x:Name="nombreusuario" Height="40" Width="300" Background="Transparent" BorderThickness="0,0,1,1" BorderBrush="#2F4156" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Contraseña" FontSize="22" HorizontalAlignment="Center"/>
                    <PasswordBox x:Name="contraseña" Height="40" Width="300" Background="Transparent" BorderThickness="0,0,1,1" BorderBrush="#2F4156" FontSize="20" HorizontalAlignment="Center"/>
                </StackPanel>

                <Button Content="Iniciar sesion" Width="200" Height="65" Background="#577C8E" Foreground="White" 
             FontWeight="Bold" FontSize="20" Margin="0,30,0,0" Cursor="Hand" BorderThickness="0" Click="Button_Click"  />
                
            </StackPanel>

        </Grid>





    </Border>
</Window>
