<Page x:Class="practica_integradora.VentaInicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practica_integradora"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="VentaInicio"
      Background="#C7D9E5">
    <Grid>

        <Border Name="Card"
             Background="#F4EFEB"
             CornerRadius="25"
             BorderBrush="#577C8E"
             BorderThickness="3"
             Padding="50"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Width="500">

            <StackPanel HorizontalAlignment="Center">

                <TextBlock Name="TituloText"
                        Text="BYLE"
                        FontSize="72"
                        FontWeight="Bold"
                        Foreground="#314759"
                        HorizontalAlignment="Center"
                        Margin="10"
                        />

                <TextBlock Name="SubTituloText"
                        Text="Sistema de gestión para gimnasios"
                        FontSize="20"
                        Foreground="#577C8E"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        FontWeight="DemiBold"    />

                <TextBlock Name="SubTitulo2"
                     Text="Gracias por su preferencia!"
                     FontSize="20"
                     Foreground="#577C8E"
                     HorizontalAlignment="Center"
                     Margin="0,10,0,0"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
